{
  "name": "@reliverse/dler",
  "author": "reliverse",
  "version": "1.1.3",
  "type": "module",
  "license": "MIT",
  "description": "@reliverse/dler is a flexible, unified, and fully automated bundler for TypeScript and JavaScript projects, as well as an NPM and JSR publishing tool.",
  "scripts": {
    "pub": "bun src/main.ts",
    "dev": "bun src/main.ts --dev",
    "dev:tools": "bun src/main.ts tools --dev --tool",
    "agg": "bun src/main.ts tools --dev --tool agg --input src/libs/sdk/sdk-impl --out src/libs/sdk/sdk-main.ts --recursive --named --strip src/libs/sdk",
    "check": "tsc --noEmit && eslint --cache --fix . && biome check --fix --unsafe .",
    "latest": "bun update --latest && bun check",
    "knip": "knip",
    "vi": "vitest"
  },
  "dependencies": {
    "@reliverse/relico": "^1.1.0",
    "@reliverse/relinka": "^1.4.1",
    "@reliverse/rempts": "^1.6.2",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/pluginutils": "^5.1.4",
    "bun": "^1.2.11",
    "c12": "^3.0.3",
    "defu": "^6.1.4",
    "esbuild": "^0.25.3",
    "execa": "^9.5.2",
    "fix-dts-default-cjs-exports": "^1.0.1",
    "fs-extra": "^11.3.0",
    "hookable": "^5.5.3",
    "jiti": "^2.4.2",
    "magic-string": "^0.30.17",
    "mkdist": "^2.3.0",
    "mlly": "^1.7.4",
    "p-all": "^5.0.0",
    "p-map": "^7.0.3",
    "pathe": "^2.0.3",
    "pkg-types": "^2.1.0",
    "pretty-bytes": "^7.0.0",
    "pretty-ms": "^9.2.0",
    "rollup": "^4.40.1",
    "rollup-plugin-dts": "^6.2.1",
    "scule": "^1.3.0",
    "semver": "^7.7.1",
    "tinyglobby": "^0.2.13",
    "untyped": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.26.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.11",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.3",
    "@types/semver": "^7.7.0",
    "eslint": "^9.26.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-perfectionist": "^4.12.3",
    "knip": "^5.53.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  }
}
